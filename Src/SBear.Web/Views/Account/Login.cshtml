@{
    ViewData["Title"] = "Login";
}
@model SBear.Web.ViewModels.AccountViewModel.LoginViewModel
<div class="row" style="padding-top: 30px;">
    <div class="col-md-8">
        <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">
            <div class="form-group">
                <label asp-for="UserName" for="LoginUserNameInput" class="col-sm-2 control-label"></label>
                <div class="col-sm-5">
                    <input asp-for="UserName" type="text" class="form-control" id="LoginUserNameInput" placeholder="请输入用户名...">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" for="LoginPasswordInput" class="col-sm-2 control-label">密码</label>
                <div class="col-sm-5">
                    <input  asp-for="Password" type="password" class="form-control" id="LoginPasswordInput" placeholder="请输入密码...">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">登录</button>
                </div>
            </div>
        </form>
    </div>
</div>
