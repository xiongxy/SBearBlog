@model SBear.Web.ViewModels.HomeViewModel.ArticleViewModel

@section Css{
    <link href="~/lib/editor.md/css/editormd.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" method="post" asp-controller="Home" asp-action="WriteArticle">
            <div class="form-group">
                <label for="inputTitle" asp-for="Title" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Title" id="inputTitle" placeholder="填写主题" required>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" asp-for="Content" control-label">内容</label>
                <div class="col-sm-10">
                    <div id="editormd">
                        <textarea asp-for="Content" style="display:none;"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">发布</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Script{
    <script src="~/lib/editor.md/editormd.js"></script>
    <script type="text/javascript">
        var Editor;
        $(function () {
            Editor = editormd("editormd", {
                width: "100%",
                height: 640,
                syncScrolling: "single",
                path: "/lib/editor.md/lib/",
                saveHTMLToTextarea: true,    // 保存 HTML 到 Textarea
            });
        });
    </script>
}

