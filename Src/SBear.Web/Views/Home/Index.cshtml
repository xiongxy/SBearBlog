@using System.Diagnostics
@{
    ViewData["Title"] = "Home Page";
    var list = ViewBag.Articles as List<BlogArticleDto>;
}
<link href="~/css/Index.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-9">
        <div class="card">
            <span>提问</span>
            <span>回答</span>
            <span>写文章</span>
            <span>写想法</span>
        </div>
        <div class="topic-Main">
            @{
                Debug.Assert(list != null, nameof(list) + " != null");
            }
            @foreach (var item in list)
            {
                <div class="topicItem">
                    <div class="topicItem-title">
                        <h4>@item.Label</h4>
                    </div>
                    <div class="topicItem-authorInfo">
                        <h4>@item.CreateBy</h4>
                    </div>
                    <div class="topicItem-contentItem">
                        <h4>@item.Content</h4>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-3">.col-md-3</div>
</div>