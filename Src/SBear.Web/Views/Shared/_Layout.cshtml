<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="Keywords" content="@SBear.Framework.Config.SBearConfig.BlogAppSettingConfig.SeoKeywords">
    <meta name="description" content="@SBear.Framework.Config.SBearConfig.BlogAppSettingConfig.SeoDescription">
    <meta name="author" content="@SBear.Framework.Config.SBearConfig.BlogAppSettingConfig.SeoAuthor">
    <title>@ViewBag.Title @SBear.Framework.Config.SBearConfig.BlogAppSettingConfig.SeoTitle</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    @RenderSection("Css", required: false)
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>
    <!-- Fixed navbar -->
    <nav class="header navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img alt="SBear Blog" src="~/Image/duolaAmeng.jpg" style="width: 20px; height: 20px;" />
                </a>
                <a class="navbar-brand" style="font-family: STXingkai; font-size: 20px;" asp-controller="Home" asp-action="Index">@SBear.Framework.Config.SBearConfig.BlogAppSettingConfig.BlogName</a>
                <span class="navbar-brand" style="font-family: STXingkai; font-size: 25px;">@SBear.Framework.Config.SBearConfig.BlogAppSettingConfig.BlogPersonalitySignature</span>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                @await Component.InvokeAsync("LoginStatusBar")
                <form class="navbar-form navbar-right" asp-controller="Search" asp-action="Index" method="get" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control col-lg-6" name="key" placeholder="请输入搜索内容,回车完成">
                    </div>
                </form>
            </div>
        </div>
    </nav>
    <div class="container">
        <!-- Main component for a primary marketing message or call to action -->
        @RenderBody()
    </div>
    @*<footer class="footer text-center">
            <div class="container">
                <p><a href="https://github.com/xiongxy/SBearBlog" target="_blank">SBear</a>&copy; 2017 - SBear</p>
            </div>
        </footer>*@
    @RenderSection("Script", required: false)
</body>
</html>
